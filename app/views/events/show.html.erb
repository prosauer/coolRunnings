<%=@event.name%><br>
<%=@event.date%><br>
<%=@event.round_distance_in_meters%><br>
<%=@event.description%><br>
<% if authenticated? %>
  <% if runner = Current.user.runner_for?(@event) %>
    <%=turbo_frame_tag "runner", src: event_runner_path(@event, runner) %>
  <% else %>
    <%=turbo_frame_tag "runner", src: new_event_runner_path(@event) %>
  <% end %>
<% else %>
  Please log in or create a new account to sign up for this event.
<% end %>
